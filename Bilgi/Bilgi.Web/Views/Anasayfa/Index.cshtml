    <div class="mb-3"></div><!-- End .mb-3 -->

    <!-- Bilgisayarlar Slider -->
    <vc:main-bilgisayarlar></vc:main-bilgisayarlar>

    <div class="mb-3"></div><!-- End .mb-3 -->


    <div class="mb-1"></div><!-- End .mb-1 -->

    <!-- Kırtasiye Slider -->
