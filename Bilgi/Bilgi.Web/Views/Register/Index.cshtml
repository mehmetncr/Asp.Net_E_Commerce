@model RegisterViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout/_MainLayout.cshtml";
}

<main class="main">


	<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('/molla/assets/images/backgrounds/login-bg.jpg')">
		<div class="container">
			<div class="form-box">
				<div class="form-tab">
					<ul class="nav nav-pills nav-fill" role="tablist">
						<li class="nav-item">
							<a class="nav-link active" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab" aria-controls="signin-2" aria-selected="false">Üye Ol</a>
						</li>
						<li class="nav-item">
							<a class="nav-link "  asp-action="Index" asp-controller="Login" role="tab"  aria-selected="false">Giriş Yap</a>
						</li>
						
					</ul>
					<div class="tab-content ">
						<div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
							<form asp-action="Index" asp-controller="Register" method="post">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="form-group">
									<label >İsim *</label>
									<input type="text" class="form-control" asp-for="Isim" required>
								</div><!-- End .form-group -->
								<div class="form-group">
									<label >Soyisim *</label>
									<input type="text" class="form-control" asp-for="SoyIsim" required>
								</div><!-- End .form-group -->
								<div class="form-group">
									<label >Telefon No *</label>
									<input type="tel" class="form-control"  asp-for="TelefonNo" required>
								</div><!-- End .form-group -->
								<div class="form-group">
									<label>Email Adres *</label>
									<input type="email" class="form-control"  asp-for="Email" required>
								</div><!-- End .form-group -->

								<div class="form-group">
									<label >Şifre *</label>
									<input type="password" class="form-control" asp-for="Sifre" required>
								</div><!-- End .form-group -->
								<div class="form-group">
									<label >Şifre Tekrar *</label>
									<input type="password" class="form-control"  name="register-password" required>
								</div><!-- End .form-group -->

								<div class="form-footer">
									<button type="submit" class="btn btn-outline-primary-2">
										<span>Üye Ol</span>
										<i class="icon-long-arrow-right"></i>
									</button>

									<div class="custom-control custom-checkbox">
										<input type="checkbox" class="custom-control-input" id="register-policy-2" required>
										<label class="custom-control-label" for="register-policy-2"><a href="#">Hizmet Politikasını</a> Kabul Ediyorum *</label>
									</div><!-- End .custom-checkbox -->
								</div><!-- End .form-footer -->
							</form>
						</div><!-- .End .tab-pane -->
					</div><!-- End .tab-content -->
				</div><!-- End .form-tab -->
			</div><!-- End .form-box -->
		</div><!-- End .container -->
	</div><!-- End .login-page section-bg -->
</main><!-- End .main -->
