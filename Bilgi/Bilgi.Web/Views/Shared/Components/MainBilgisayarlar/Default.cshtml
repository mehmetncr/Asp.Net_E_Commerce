@model IEnumerable<UrunViewModel>

<div class="container electronics">
    <div class="heading heading-flex heading-border mb-3">
        <div class="heading-left">
            <h2 class="title">Bilgisayarlar</h2><!-- End .title -->
        </div><!-- End .heading-left -->

        <div class="heading-right">
            <ul class="nav nav-pills nav-border-anim justify-content-center" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="elec-new-link" data-toggle="tab" href="#elec-new-tab" role="tab" aria-controls="elec-new-tab" aria-selected="true">Masaüstü Bilgisayarlar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="elec-featured-link" data-toggle="tab" href="#elec-featured-tab" role="tab" aria-controls="elec-featured-tab" aria-selected="false">Laptoplar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="elec-best-link" data-toggle="tab" href="#elec-best-tab" role="tab" aria-controls="elec-best-tab" aria-selected="false">OEM Parçalar</a>
                </li>
            </ul>
        </div><!-- End .heading-right -->
    </div><!-- End .heading -->

    <div class="tab-content tab-content-carousel">
        <div class="tab-pane p-0 fade show active" id="elec-new-tab" role="tabpanel" aria-labelledby="elec-new-link">
            <div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow" data-toggle="owl"
                 data-owl-options='{
                                "nav": false,
                                "dots": true,
                                "margin": 20,
                                "loop": false,
                                "responsive": {
                                    "0": {
                                        "items":2
                                    },
                                    "480": {
                                        "items":2
                                    },
                                    "768": {
                                        "items":3
                                    },
                                    "992": {
                                        "items":4
                                    },
                                    "1280": {
                                        "items":5,
                                        "nav": true
                                    }
                                }
                            }'>
                @foreach (var item in Model)
                { 
                    if (item.KategoriId==1)
                    {
                        
                    

                    <div class="product">
                        <figure class="product-media">

                                <a asp-action="Index" asp-controller="UrunDetay" asp-route-id="@item.Id">
                                <img src="@item.ResimUrlKucuk" alt="@item.ResimBaslik" class="product-image">
                            </a>


                            <div class="product-action">
                                    <a href="javascript:void(0);" class="btn-product btn-cart" title="Add to cart" onclick="submitForm(@item.Id, 1)"><span>Sepete Ekle</span></a>
                                </div><!-- End .product-action -->
                        </figure><!-- End .product-media -->

                        <div class="product-body">
                            <div class="product-cat">
                                <a href="#">Bilgisayar</a>
                            </div><!-- End .product-cat -->

                                <h3 class="product-title"><a asp-action="Index" asp-controller="UrunDetay" asp-route-id="@item.Id">@item.Adi</a></h3>

                                    <!-- End .product-title -->
                        
                        

                            <div class="product-price">
                                <span class="price"></span>
                                @item.Fiyat.ToString("C")
                            </div><!-- End .product-price -->
                          
                        </div><!-- End .product-body -->
                    </div>

                    <!-- End .product -->
                    }
                 } 



            </div><!-- End .owl-carousel -->
        </div><!-- .End .tab-pane -->
        <div class="tab-pane p-0 fade" id="elec-featured-tab" role="tabpanel" aria-labelledby="elec-featured-link">
            <div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow" data-toggle="owl"
                 data-owl-options='{
                                "nav": false,
                                "dots": true,
                                "margin": 20,
                                "loop": false,
                                "responsive": {
                                    "0": {
                                        "items":2
                                    },
                                    "480": {
                                        "items":2
                                    },
                                    "768": {
                                        "items":3
                                    },
                                    "992": {
                                        "items":4
                                    },
                                    "1280": {
                                        "items":5,
                                        "nav": true
                                    }
                                }
                            }'>
                @foreach (var item in Model)
                {
                    if (item.KategoriId == 3)
                    {



                        <div class="product">
                            <figure class="product-media">

                                <a asp-action="Index" asp-controller="UrunDetay" asp-route-id="@item.Id">
