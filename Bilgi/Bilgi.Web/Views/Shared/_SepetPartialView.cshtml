@model List<SepetDetayViewModel>
<div class="page-content" id="Tablo">
    <div class="cart">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <table class="table table-cart table-mobile">
                        <thead>
                            <tr>
                                <th>Ürünler</th>
                                <th>Fiyat</th>
                                <th>Adet</th>
                                <th>Toplam</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr>
                                    <td class="product-col">
                                        <div class="product">
                                            <figure class="product-media">
                                                <a href="#">
                                                    <img src="@item.Urun.ResimUrlKucuk" alt="Product image">
                                                </a>
                                            </figure>

                                            <h3 class="product-title">
                                                <a href="#">@item.Urun.Adi</a>
                                            </h3><!-- End .product-title -->
                                        </div><!-- End .product -->
                                    </td>
                                    <td class="price-col">@item.BirimFiyat.ToString("C")</td>
                                    <td class="quantity-col">
                                        <div class="cart-product-quantity" onclick="adet(@item.UrunId)">
                                            <input id="@item.UrunId" type="number" class="form-control" value="@item.Adet" min="1" max="@item.Urun.Stok" step="1" data-decimals="0" required readonly>
                                        </div><!-- End .cart-product-quantity -->
                                    </td>
                             
                              
                                    <td class="total-col">@item.ToplamTutar.ToString("C")</td>
                                    <td class="remove-col"><a asp-action="SepettenSil" asp-route-id="@item.UrunId" class="btn-remove"><i class="icon-close"></i></a></td>
                                    <td> <input type="hidden" id="urunid-@item.UrunId" value="@item.UrunId" /></td>
                                </tr>
                            }
                        </tbody>
                    </table><!-- End .table table-wishlist -->


                </div><!-- End .col-lg-9 -->
                <aside class="col-lg-3">
                    <div class="summary summary-cart">
                        <h3 class="summary-title">Sepet Toplamı</h3><!-- End .summary-title -->

                        <table class="table table-summary">
                            <tbody>
                                <tr class="summary-subtotal">
                                    <td>Toplam:</td>
                                    <td>
                                        @ViewBag.toplam
                                    </td>
                                </tr><!-- End .summary-subtotal -->




                                <tr class="summary-shipping-estimate">
                                    <td>Estimate for Your Country<br> <a href="dashboard.html">Adresi Değiştir</a></td>
                                    <td>&nbsp;</td>
                                </tr><!-- End .summary-shipping-estimate -->

                                <tr class="summary-total">
                                    <td>Total:</td>
                                    <td>@ViewBag.toplam</td>
                                </tr><!-- End .summary-total -->
                            </tbody>
                        </table><!-- End .table table-summary -->

                        <a href="checkout.html" class="btn btn-outline-primary-2 btn-order btn-block">Alışverişi Tamamla</a>
                    </div><!-- End .summary -->


                </aside><!-- End .col-lg-3 -->
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End .cart -->
</div><!-- End .page-content -->
