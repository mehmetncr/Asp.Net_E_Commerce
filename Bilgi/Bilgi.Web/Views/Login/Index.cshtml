@model LoginViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout/_MainLayout.cshtml";
}
<main class="main">
	

	<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('/molla/assets/images/backgrounds/login-bg.jpg')">
		<div class="container">
			<div class="form-box">
				<div class="form-tab">
					<ul class="nav nav-pills nav-fill" role="tablist">
						<li class="nav-item">
							<a class="nav-link active" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab" aria-controls="signin-2" aria-selected="false">Giriş Yap</a>
						</li>
						<li class="nav-item">
							<a class="nav-link " asp-action="Index" asp-controller="Register" role="tab" aria-selected="false">Üye Ol</a>
						</li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane fade show active" id="signin-2" role="tabpanel" aria-labelledby="signin-tab-2">
							<form asp-action="Index" asp-controller="Login" method="post">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="form-group">
									<label for="singin-email-2">Email Adresi *</label>
									<input asp-for="Email" type="email" class="form-control" id="singin-email-2"  required>
								</div><!-- End .form-group -->

								<div class="form-group">
									<label for="singin-password-2">Şifre *</label>
									<input asp-for="Sifre" type="password" class="form-control" id="singin-password-2"  required>
								</div><!-- End .form-group -->

								<div class="form-footer">
									<button type="submit" class="btn btn-outline-primary-2">
										<span>Giriş</span>
										<i class="icon-long-arrow-right"></i>
									</button>

									<div class="custom-control custom-checkbox">
										<input type="checkbox" class="custom-control-input" id="signin-remember-2">
										<label class="custom-control-label" for="signin-remember-2">Beni Hatırla</label>
									</div><!-- End .custom-checkbox -->

									<a href="#" class="forgot-link">Şifrenizi Mİ Unuttunuz</a>
								</div><!-- End .form-footer -->
							</form>
						</div><!-- .End .tab-pane -->
					</div><!-- End .tab-content -->
				</div><!-- End .form-tab -->
			</div><!-- End .form-box -->
		</div><!-- End .container -->
	</div><!-- End .login-page section-bg -->
</main><!-- End .main -->
